@using MultiShopBackEndProject.Models
@model List<Clothe>
@{
    ViewData["Title"] = "Index page";
}


<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="ShopAdmin" asp-controller="Clothe" asp-action="Create">Create a new clothe</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Clothe clothe in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/img/@clothe.ClotheImages.FirstOrDefault(i=>i.IsMain == true).Image"/>
                        </td>
                        <td>
                            @clothe.Id
                        </td>
                        <td>
                            @clothe.Name
                        </td>
                        <td  class="d-flex">
                                <div>
                                    <a asp-area="ShopAdmin" asp-controller="Clothe" asp-action="Edit" asp-route-id="@clothe.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                </div>
                                <div>
                                    <a class="btn btn-danger" asp-area="ShopAdmin" asp-controller="Clothe" asp-action="Delete" asp-route-id="@clothe.Id"><i class="mdi mdi-delete"></i></a>
                                </div>
                                <div>
                                    <a class="btn btn-danger" asp-area="ShopAdmin" asp-controller="Clothe" asp-action="Detail" asp-route-id="@clothe.Id"><i class="mdi mdi-file"></i></a>
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

