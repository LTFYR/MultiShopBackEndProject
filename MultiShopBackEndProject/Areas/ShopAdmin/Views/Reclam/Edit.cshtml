
@model Reclam
@{
    ViewData["Title"] = "CreateCateg";
}


<div class="main-panel">
    <h2 style="font-size:20px" class="text-center btn btn-secondary">Create a new reclam</h2>
    <form class="mt-3" method="post">
    <div>
        <label>Add foto:</label><br/>
        <input asp-for="Foto" class="form-control"/><br/>
        <span class="text-danger" asp-validation-for="Foto"></span>       
    </div>
    <div>
        <label>Add title:</label><br/>
        <input asp-for="Title" class="form-control"/><br/>
        <span class="text-danger" asp-validation-for="Title"></span>       
    </div>
    <div>
        <label>Add an offer:</label><br/>
        <input asp-for="Offer" class="form-control"/><br/>
        <span class="text-danger" asp-validation-for="Offer"></span>       
    </div>
    <div>
        <label>Add url:</label><br/>
        <input asp-for="Url" class="form-control"/><br/>
        <span class="text-danger" asp-validation-for="Url"></span>       
    </div>
    <div class="mt-2">
        <button style="color:white" class="btn btn-primary" type="submit">Create</button>
    </div>
    
</form>
</div>